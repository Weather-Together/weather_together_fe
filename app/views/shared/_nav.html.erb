        </li>
        <li class='nav-item px-lg-2'>
          <%= button_to 'Login', login_path, method: :get, class: 'btn btn-primary', style: 'margin-right: 1rem; background-color: #007bff; color: #fff; padding: 10px 20px; border-radius: 5px;', class: ('active' if current_page?(login_path)) %>
