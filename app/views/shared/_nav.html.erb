<div class='nav-container container-fluid'>
  <nav class='navbar navbar-dark'>
    <%= link_to '/' do %>
      <%= image_tag 'logo.png', style: 'height: 70px; margin-right: 10px; margin-left: 15px;', class: 'navbar-brand' %>
    <% end %>

    <ul class='navbar-nav ml-lg-auto d-flex flex-row'>
      <% if session[:user_id] %>
        <li class='nav-item px-lg-2'>
          <%= button_to 'Community Round', '/community_round', method: :get, class: 'btn btn-primary', style: 'margin-right: 1rem; background-color: #007bff; color: #fff; padding: 10px 20px; border-radius: 5px;', class: ('active' if current_page?('/community_round')) %>
        </li>
        <li class='nav-item px-lg-2'>
          <%= button_to 'Dashboard', '/users/dashboard', method: :get, class: 'btn btn-primary', style: 'margin-right: 1rem; background-color: #007bff; color: #fff; padding: 10px 20px; border-radius: 5px;', class: ('active' if current_page?('/users/dashboard')) %>
