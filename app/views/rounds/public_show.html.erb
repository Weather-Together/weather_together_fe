<%= render partial: "shared/nav_login" %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
  <meta charset="UTF-8" />
  <title>Public Game</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />

  <link rel="stylesheet" type="text/css" href="https://api.tomtom.com/maps-sdk-for-web/cdn/6.x/6.25.0/maps/maps.css" />

  <!-- Include TomTom Maps -->
  <script src="https://api.tomtom.com/maps-sdk-for-web/cdn/6.x/6.25.0/maps/maps-web.min.js"></script>

  <style>
    html,
    body {
      height: 100%;
      overflow-y: auto; /* Allow scrolling if content exceeds height */
    }

    #map {
      min-height: 100vh;
    }

    #right-column {
      background-color: #f8f9fa; /* Adjust background color as needed */
      padding: 15px;
      box-sizing: border-box;
      height: 100vh;
    }

    #markerInfoContainer {
      padding: 15px;
      margin-bottom: 15px; /* Add margin to separate from the submit button */
      white-space: nowrap; /* Prevent text from wrapping */
    }

    #submitButtonContainer {
      padding: 15px;
      position: relative;
      bottom: 0;
      width: 100%;
    }

    #gridBox {
      width: 250px; /* WILL NEED TO ADJUST THIS */
      height: 25px;
      background-color: lightgray;
      border: 1px solid gray;
      white-space: nowrap; /* Prevent text from wrapping */
    }

    #gridHeader {
      font-weight: bold;
      margin-bottom: 5px;
      white-space: nowrap; /* Prevent 
      text from wrapping */
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <!-- TomTom Map Container -->
        <div id="map" class="map"></div>
      </div>
      <div id="right-column" class="col-md-4">
        <!-- Add the grid container here -->
      <div class="col-md-4">
        <div id="gridContainer">
          <!-- Add a text header and a grid box for each item -->
          <div>
            <div id="gridHeader">High Temperature</div>
            <div id="gridBox"></div>
          </div>
          <div>
            <div id="gridHeader">Low Temperature</div>
            <div id="gridBox"></div>
          </div>
          <div>
            <div id="gridHeader">Humidity</div>
            <div id="gridBox"></div>
          </div>
          <div>
            <div id="gridHeader">Wind Speed</div>
            <div id="gridBox"></div>
          </div>
          <div>
            <div id="gridHeader">Air Quality</div>
            <div id="gridBox"></div>
          </div>
          <div>
            <div id="gridHeader">Precipitation</div>
            <div id="gridBox"></div>
          </div>
        </div>
        <!-- Marker Information Container -->
        <div id="markerInfoContainer">
          <h4>Marker Location:</h4>
          <p id="latitude">Latitude: </p>
          <p id="longitude">Longitude: </p>
        </div>

        <!-- Button -->
        <div id="submitButtonContainer">
          <%= form_with(url: '/', method: 'post', id: 'locationForm') do |form| %>
            <%= form.hidden_field :latitude, id: 'latitudeField' %>
            <%= form.hidden_field :longitude, id: 'longitudeField' %>
            <%= form.submit 'Submit', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<script>
  var map = tt.map({
    key: "S2oPYjoq5sNa8lSADIOzsvTlB8E25a4T",
    container: "map"
  });

  // Get the initial center of the map
  var initialCenter = map.getCenter();

  // Create a marker with the initial position
  var marker = new tt.Marker().setLngLat(initialCenter).addTo(map);

  // Update marker position when the map is dragged
  map.on('dragend', function () {
    var newCenter = map.getCenter();
    marker.setLngLat(newCenter);
  });

  map.on('click', function (event) {
    var { lat, lng } = event.lngLat;

    // Update marker position
    marker.setLngLat([lng, lat]);

    // Update latitude and longitude information
    document.getElementById('latitude').innerText = 'Latitude: ' + lat;
    document.getElementById('longitude').innerText = 'Longitude: ' + lng;

    // Update hidden form fields
    document.getElementById('latitudeField').value = lat;
    document.getElementById('longitudeField').value = lng;
  });
</script>

</body>
</html>
